{
  "version": "0.4.0-beta",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "tailwind.config.js"
  ],
  "keywords": ["react", "browserless.io", "ui"],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/browserless/browserless-elements"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && tailwindcss -i ./src/globals.css -o ./dist/elements.css --minify",
    "build-package": "npm run build && npm pack",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prettier": "prettier --config .prettierrc --write --log-level error \"src/**/*.{ts,tsx,css}\" tailwind.config.js",
    "publish:test": "npm run build && npm publish --registry http://localhost:4873/"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@browserless.io/elements",
  "author": "browserless.io",
  "module": "dist/elements.esm.js",
  "size-limit": [
    {
      "path": "dist/elements.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/elements.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.6",
    "@types/node": "^20.4.9",
    "@types/react": "^18.2.19",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/parser": "^6.5.0",
    "cssnano": "^6.0.1",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.6",
    "tailwindcss": "^3.3.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "refractor": "^4.8.1"
  }
}
